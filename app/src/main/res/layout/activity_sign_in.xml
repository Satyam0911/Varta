<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_20sdp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:src="@drawable/icons8_whatsapp" />

        <EditText
            android:id="@+id/edtemail2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24sdp"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:hint="E-mail"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/edtpass2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24sdp"
            android:background="@color/white"
            android:hint="Password"
            android:inputType="numberPassword" />

        <TextView
            android:id="@+id/btnClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ECE8E8"
            android:gravity="right"
            android:layout_gravity="right"
            android:text="Sign Up" />

        <Button
            android:id="@+id/btnsignin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:text="SIGN IN" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="@dimen/_120sdp"
                android:layout_height="match_parent"
                android:id="@+id/btngoogle"
                android:backgroundTint="@color/white"
                android:layout_margin="@dimen/_5sdp"
                android:drawableLeft="@drawable/icons8_google"
                android:textColor="@color/black"
                android:text="Google" />

            <Button
                android:layout_width="@dimen/_120sdp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:id="@+id/btnfacebook"
                android:text="Facebook"
                android:drawableLeft="@drawable/icons8_facebook" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up with Phone"/>
    </LinearLayout>

</LinearLayout>